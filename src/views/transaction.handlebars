{{#section 'css'}}
<link href="https://releases.transloadit.com/uppy/v3.23.0/uppy.min.css" rel="stylesheet">
{{/section}}

<div class="row justify-content-center">
  <div class="col-lg-10">

    <div class="wizard-card">
      
      <div class="stepper-wrapper">
        <div class="stepper-item {{#if (gte currentStep 1)}}active{{/if}} {{#if (gt currentStep 1)}}completed{{/if}}">
          <div class="step-counter">{{#if (gt currentStep 1)}}<i class="bi bi-check"></i>{{else}}1{{/if}}</div>
          <div class="step-name">Address</div>
        </div>
        <div class="stepper-item {{#if (gte currentStep 2)}}active{{/if}} {{#if (gt currentStep 2)}}completed{{/if}}">
          <div class="step-counter">{{#if (gt currentStep 2)}}<i class="bi bi-check"></i>{{else}}2{{/if}}</div>
          <div class="step-name">Payment</div>
        </div>
        <div class="stepper-item {{#if (gte currentStep 3)}}active{{/if}} {{#if (gt currentStep 3)}}completed{{/if}}">
          <div class="step-counter">{{#if (gt currentStep 3)}}<i class="bi bi-check"></i>{{else}}3{{/if}}</div>
          <div class="step-name">Shipping</div>
        </div>
        <div class="stepper-item {{#if (gte currentStep 4)}}active{{/if}} {{#if (gt currentStep 4)}}completed{{/if}}">
          <div class="step-counter">{{#if (gt currentStep 4)}}<i class="bi bi-check"></i>{{else}}4{{/if}}</div>
          <div class="step-name">Receive</div>
        </div>
      </div>

      <div class="alert alert-light border d-flex align-items-center mb-5">
        <img src="/src/static/images/{{product.seller_id}}/{{product.product_id}}/main_thumbs.jpg" 
             style="width: 60px; height: 60px; object-fit: cover; border-radius: 8px;" class="me-3">
        <div>
          <h5 class="mb-0 fw-bold">{{product.name}}</h5>
          <small class="text-muted">Final Price: <span class="fw-bold text-success">{{formatCurrency product.current_price}}</span></small>
        </div>
        <div class="ms-auto">
          <span class="badge bg-secondary">{{#if (eq role 'buyer')}}You are Buying{{else}}You are Selling{{/if}}</span>
        </div>
      </div>

      {{!-- ================================================================= --}}
      {{!-- STEP 1: CONFIRM ADDRESS (Buyer Only) --}}
      {{!-- ================================================================= --}}
      {{#if (eq currentStep 1)}}
        {{#if (eq role 'buyer')}}
          <h4 class="mb-4 fw-bold" style="color: var(--color-primary);">Step 1: Confirm Shipping Address</h4>
          <form action="/transaction/step1" method="POST">
            <input type="hidden" name="order_id" value="{{orderId}}">
            
            <div class="mb-3">
                <label class="form-label fw-bold">Full Name</label>
                <input type="text" class="form-control" value="{{authUser.full_name}}" disabled readonly>
            </div>
            
            <div class="mb-4">
                <label class="form-label fw-bold">Shipping Address</label>
                <textarea class="form-control" name="address" rows="3" required>{{authUser.address}}</textarea>
                <div class="form-text text-muted">You can edit this address for this specific order.</div>
            </div>

            <div class="text-end">
              <button type="submit" class="btn btn-orange btn-lg px-5">Confirm & Next <i class="bi bi-arrow-right"></i></button>
            </div>
          </form>
        {{else}}
          <div class="text-center py-5">
            <div class="waiting-pulse"><i class="bi bi-geo-alt fs-1 text-white"></i></div>
            <h4>Waiting for Buyer...</h4>
            <p class="text-muted">The buyer is confirming their shipping address.</p>
            <button onclick="location.reload()" class="btn btn-outline-secondary mt-3">Check Status</button>
          </div>
        {{/if}}
      {{/if}}

      {{!-- ================================================================= --}}
      {{!-- STEP 2: PAYMENT (Buyer Uploads) --}}
      {{!-- ================================================================= --}}
      {{#if (eq currentStep 2)}}
        {{#if (eq role 'buyer')}}
          <h4 class="mb-4 fw-bold" style="color: var(--color-primary);">Step 2: Make Payment</h4>
          
          <div class="alert alert-info">
             <strong>Instruction:</strong> Please transfer <strong>{{formatCurrency product.current_price}}</strong> to the seller and upload the proof below.
          </div>

          <form id="step2Form" action="/transaction/step2" method="POST">
            <input type="hidden" name="order_id" value="{{orderId}}">
            <input type="hidden" name="payment_image" id="paymentImage">

            <div class="mb-4">
                 <label class="form-label fw-bold">Upload Payment Proof</label>
                 <div id="uppy-payment"></div>
            </div>
            <div class="text-end">
              <button type="submit" class="btn btn-orange btn-lg px-5">Confirm Payment <i class="bi bi-check-lg"></i></button>
            </div>
          </form>
        {{else}}
          <div class="text-center py-5">
            <div class="waiting-pulse"><i class="bi bi-credit-card fs-1 text-white"></i></div>
            <h4>Waiting for Payment...</h4>
            <p class="text-muted">Buyer has confirmed address: <strong>{{orderData.shipping_address}}</strong>.<br>Waiting for buyer to upload payment proof.</p>
            
            <div class="mt-4">
                {{!-- Nút Back về danh sách --}}
                <a href="/seller/finished-auctions" class="btn btn-outline-dark me-2">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                
                {{!-- Nút reload --}}
                <button onclick="location.reload()" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise"></i> Check Status
                </button>
            </div>
          </div>
        {{/if}}
      {{/if}}

      {{!-- ================================================================= --}}
      {{!-- STEP 3: SHIPPING (Seller Uploads) --}}
      {{!-- ================================================================= --}}
      {{#if (eq currentStep 3)}}
        {{#if (eq role 'seller')}}
          <h4 class="mb-4 fw-bold" style="color: var(--color-primary);">Step 3: Confirm Shipping</h4>
          
          <div class="card bg-light border-0 mb-4">
            <div class="card-body">
              <h6 class="fw-bold">Ship to:</h6>
              <p class="mb-0">{{orderData.shipping_address}}</p>
              <hr>
              <h6 class="fw-bold">Buyer's Payment Proof:</h6>
              <img src="/src/static/transactions/{{orderId}}/payment.jpg" class="img-fluid rounded border" style="max-height: 300px;">
            </div>
          </div>

          <form id="step3Form" action="/transaction/step3" method="POST">
             <input type="hidden" name="order_id" value="{{orderId}}">
             <input type="hidden" name="shipping_image" id="shippingImage">
             
             <div class="mb-4">
                <label class="form-label fw-bold">Upload Shipping Invoice/Package Photo</label>
                <div id="uppy-shipping"></div>
             </div>
             <div class="text-end mt-4">
               {{!-- Nút Back về danh sách --}}
               <a href="/seller/finished-auctions" class="btn btn-outline-secondary btn-lg me-2">
                   Back
               </a>

               <button type="submit" class="btn btn-orange btn-lg px-5">Confirm Shipped</button>
             </div>
          </form>
        {{else}}
           <div class="text-center py-5">
            <div class="waiting-pulse"><i class="bi bi-box-seam fs-1 text-white"></i></div>
            <h4>Processing...</h4>
            <p class="text-muted">You have submitted the payment.<br>The seller is verifying and preparing to ship.</p>
            <button onclick="location.reload()" class="btn btn-outline-secondary mt-3">Check Status</button>
          </div>
        {{/if}}
      {{/if}}

      {{!-- ================================================================= --}}
      {{!-- STEP 4: CONFIRM RECEIPT (Buyer Confirms) --}}
      {{!-- ================================================================= --}}
      {{#if (eq currentStep 4)}}
         {{#if (eq role 'buyer')}}
            <h4 class="mb-4 fw-bold" style="color: var(--color-primary);">Step 4: Confirm Receipt</h4>
            
            <div class="text-center mb-4">
              <img src="/src/static/transactions/{{orderId}}/shipping.jpg" class="img-fluid rounded shadow-sm" style="max-height: 300px;">
              <p class="text-muted mt-2">Seller's shipping proof</p>
            </div>

            <div class="text-center">
              <p>Have you received the package?</p>
              <form action="/transaction/step4" method="POST">
                <input type="hidden" name="order_id" value="{{orderId}}">
                {{!-- Nút này luôn enable vì đã vào Step 4 nghĩa là shipping_confirmed = true --}}
                <button type="submit" class="btn btn-orange btn-lg">I Have Received the Item <i class="bi bi-check-circle-fill"></i></button>
              </form>
            </div>
         {{else}}
            <div class="text-center py-5">
              <div class="waiting-pulse"><i class="bi bi-house-check fs-1 text-white"></i></div>
              <h4>Item In Transit</h4>
              <p class="text-muted">You have confirmed shipping.<br>Waiting for buyer to confirm receipt.</p>
              <button onclick="location.reload()" class="btn btn-outline-secondary mt-3">Check Status</button>
            </div>
         {{/if}}
      {{/if}}

      {{!-- ================================================================= --}}
      {{!-- COMPLETED --}}
      {{!-- ================================================================= --}}
      {{#if (gte currentStep 5)}}
        <div class="text-center py-5">
             <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
             <h3 class="mt-3">Transaction Completed!</h3>
             <p>Thank you for using MNGo Auction.</p>
             <a href="/" class="btn btn-outline-primary mt-3">Back to Home</a>
        </div>
      {{/if}}

    </div>
  </div>
</div>

{{#section 'js'}}
<script src="https://releases.transloadit.com/uppy/v3.23.0/uppy.min.js"></script>

<script>
  function initUppy(containerId, outputInputId) {
    if (!document.querySelector(containerId)) return;

    const uppy = new Uppy.Uppy({
      restrictions: {
        maxNumberOfFiles: 1, 
        allowedFileTypes: ['image/*']
      }
    })
    .use(Uppy.Dashboard, {
      inline: true,
      target: containerId,
      height: 250,
      width: '100%',
      hideUploadButton: true
    })
    .use(Uppy.XHRUpload, {
      endpoint: '/transaction/upload/temp', // Reuse endpoint upload temp
      fieldName: 'imgs',
    });

    uppy.on('file-added', (file) => { uppy.upload(); });

    uppy.on('upload-success', (file, response) => {
      document.querySelector(outputInputId).value = response.body.filename;
    });
  }

  document.addEventListener('DOMContentLoaded', function() {
    initUppy('#uppy-payment', '#paymentImage');   // Step 2
    initUppy('#uppy-shipping', '#shippingImage'); // Step 3
  });
</script>
{{/section}}