{{#section 'css'}}
<style>
  .product-card {
    transition: transform 0.2s;
  }

  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  /* Style cho sản phẩm mới */
  .product-card.product-new {
    border: 2px solid #FF8C00 !important;
    box-shadow: 0 0 10px rgba(255, 140, 0, 0.3);
  }

  .product-card.product-new:hover {
    box-shadow: 0 4px 20px rgba(255, 140, 0, 0.4);
  }

  .badge-new {
    position: absolute;
    top: 10px;
    left: 10px;
    background: #FF8C00;
    color: white;
    padding: 4px 10px;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    z-index: 10;
    animation: pulse-new 2s infinite;
  }

  @keyframes pulse-new {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
  }

  .product-image-placeholder {
    height: 220px;
    overflow: hidden;
    background-color: #f8f9fa;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .product-image-placeholder img {
    object-fit: contain;
    width: 100%;
    height: 100%;
  }

  /* 2. STYLE RIÊNG CHO ACTIVE BIDS (Badge & Crown) */
  .status-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background: #FF8C00;
    /* Màu cam cho active bid */
    color: white;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: bold;
    z-index: 10;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  }

  /* Style khi đang thắng (Top 1) */
  .card-winning {
    border: 2px solid #ffc107 !important;
    /* Viền vàng */
    background-color: #fffbf0 !important;
    /* Nền vàng nhạt */
  }

  .crown-icon {
    position: absolute;
    top: -15px;
    left: -15px;
    font-size: 2.5rem;
    color: #ffc107;
    z-index: 20;
    transform: rotate(-30deg);
    filter: drop-shadow(2px 2px 2px rgba(0, 0, 0, 0.2));
  }
</style>
{{/section}}

<h3 class="mb-4 fw-bold" style="color: #FF8C00;">Active Bids</h3>

{{#if activeBids.length}}
<div class="row g-3">
  {{#each activeBids}}
  <div class="col-sm-6 col-md-4">

    <div
      class="product-card h-100 border rounded position-relative {{#if (eq this.leader_id ../authUser.user_id)}}card-winning{{else}}bg-white{{/if}} {{#if isNew}}{{#unless (eq this.leader_id ../authUser.user_id)}}product-new{{/unless}}{{/if}}">

      {{#if isNew}}
      <span class="badge-new"><i class="bi bi-lightning-fill me-1"></i>New</span>
      {{/if}}

      <span class="status-badge">Your Bid</span>

      {{#if (eq this.leader_id ../authUser.user_id)}}
      <i class="bi bi-trophy-fill crown-icon" title="You are currently winning!"></i>
      {{/if}}

      <div class="product-image-placeholder bg-light d-flex align-items-center justify-content-center text-muted" style="height: 180px;">
        <img src="/src/static/images/{{this.seller_id}}/{{this.product_id}}/main_thumbs.jpg" class="img-fluid"
          alt="{{this.name}}">
      </div>

      <div class="product-body p-3">
        <div class="d-flex justify-content-between align-items-start">
          <h5 class="product-title mb-1 text-truncate" title="{{this.name}}">
            {{this.name}}
          </h5>
        </div>

        <p class="mb-1 small">
          {{#if (eq this.leader_id ../authUser.user_id)}}
          <span class="text-success fw-bold"><i class="bi bi-check-circle-fill"></i> You are leading!</span>
          {{else}}
          <span class="text-secondary">Highest Bidder: {{maskName this.current_bidder_name}}</span>
          {{/if}}
        </p>

        <p class="product-meta mb-1 small text-muted">
          <span class="fw-bold fs-5" style="color: #FF8C00;">
            {{#if this.current_price}}
            {{formatCurrency this.current_price}}
            {{else}}
            {{formatCurrency this.start_price}}
            {{/if}}
          </span>
          <br>

          <span>Buy it now:
            <span class="fw-bold" style="color: #FF8C00;">
              {{#if this.buy_now_price}}
              {{formatCurrency this.buy_now_price}}
              {{else}}
              None
              {{/if}}
            </span>
          </span>
          <br>

          <span>Listed: {{formatDate this.created_at "DD/MM/YYYY HH:mm"}}</span><br>
          <span>Time left:
            {{formatAuctionTime
            this.end_time "DD/MM/YYYY HH:mm"}}</span><br>
          <span>Bids: {{this.bid_count}}</span>
        </p>

        <div class="mt-2">
          <a href="/menu/detail?product_id={{this.product_id}}" class="btn btn-sm w-100" 
             style="border: 1px solid #FF8C00; color: #FF8C00;"
             onmouseover="this.style.backgroundColor='#FF8C00';this.style.color='white';"
             onmouseout="this.style.backgroundColor='transparent';this.style.color='#FF8C00';">
            Details
          </a>
        </div>
      </div>

    </div>
  </div>
  {{/each}}
</div>

{{else}}
<div class="alert alert-info text-center py-5">
  <i class="bi bi-tag fs-1 d-block mb-3"></i>
  <h5>You haven't placed any bids yet.</h5>
  <a href="/menu" class="btn mt-2" style="background-color: #FF8C00; color: white;">Start Bidding</a>
</div>
{{/if}}