{{#section 'js'}}
<script>
  $(document).ready(function() {
      $('#btnEdit').on('click', function() {
          $('#viewMode').addClass('d-none'); 
          $('#editMode').removeClass('d-none');
      });

      $('#btnCancel').on('click', function() {
          $('#editMode').addClass('d-none');
          $('#viewMode').removeClass('d-none');
      });

  });
</script>
{{/section}}

{{#section 'css'}}
<style>
  /* --- GIỮ NGUYÊN CÁC BIẾN MÀU CŨ --- */
  :root {
    --color-orange-bg: rgba(255, 140, 0, 0.6); 
    --color-orange-text: #FF8C00; 
    --color-green: #198754; 
    --color-red: #DC3545; 
    --color-blue: #0D6EFD; 
  }

  /* ... (Các CSS cũ cho Banner, Sidebar giữ nguyên) ... */
  /* Thêm lại các class cũ vào đây để đảm bảo giao diện không vỡ */
  .account-banner { background-color: var(--color-orange-bg); height: 180px; display: flex; align-items: flex-end; padding-bottom: 20px; }
  .account-banner h1 { font-weight: 800; color: white; text-transform: uppercase; font-size: 3rem; margin: 0; }
  .avatar-circle { width: 80px; height: 80px; background-color: #e9ecef; border-radius: 50%; display: flex; justify-content: center; align-items: center; font-size: 2.5rem; font-weight: bold; color: #495057; }
  .seller-badge { background-color: var(--color-green); color: white; padding: 3px 12px; border-radius: 20px; font-size: 0.85rem; font-weight: 600; }
  .bidder-badge { background-color: #198754; color: white; padding: 3px 12px; border-radius: 20px; font-size: 0.85rem; font-weight: 600; }
  .logout-link { color: var(--color-red); font-weight: 700; text-decoration: none; font-size: 1.1rem; }
  .profile-nav .nav-link { color: #212529; font-weight: 600; padding: 12px 0; font-size: 1.1rem; }
  .profile-nav .nav-link:hover { color: var(--color-blue); }
  .profile-nav .nav-link.active-custom { color: var(--color-blue); font-weight: 800; }
  .btn-upgrade { background-color: var(--color-green); color: white; font-weight: 700; padding: 10px 20px; border-radius: 20px; border: none; text-decoration: none; display: inline-block; margin-top: 15px; }
  
  /* --- CSS MỚI CHO TRANG SETTINGS --- */
  .settings-card {
    background: white;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1); /* Đổ bóng giống hình */
    padding: 40px;
    border-radius: 4px; /* Viền hơi vuông giống hình */
  }

  .info-label {
    font-family: "Times New Roman", Times, serif; /* Font có chân */
    font-weight: 700;
    font-size: 1.4rem; /* Chữ to */
    color: #000;
  }

  .info-value {
    font-size: 1.2rem;
    color: #212529;
    padding-top: 5px; /* Căn chỉnh cho thẳng hàng với label */
  }

  .password-dots {
    font-weight: 900;
    font-size: 1.5rem;
    letter-spacing: 3px;
    line-height: 0.8;
  }

  .btn-edit {
    background-color: var(--color-blue);
    color: white;
    font-weight: 700;
    padding: 8px 30px;
    border: none;
    border-radius: 4px;
    font-size: 1.1rem;
  }
  .btn-edit:hover { background-color: #0b5ed7; color: white; }

</style>
{{/section}}

<div class="container-fluid p-0 mb-5">
  <div class="account-banner">
    <div class="container">
      <h1>My Account</h1>
    </div>
  </div>
</div>

<div class="container mb-5">
  <div class="row">
    
    <div class="col-md-3">
      <div class="d-flex align-items-center mb-4">
        <div class="avatar-circle me-3">{{#if user.full_name}}{{user.full_name.[0]}}{{else}}U{{/if}}</div>
        <div>
          <h4 class="mb-1 fw-bold">{{user.full_name}}</h4>
          <div class="mb-2">
            {{#if (eq user.role 1)}}
              <span class="seller-badge">Seller</span>
            {{else}}
              <span class="bidder-badge">Bidder</span>
            {{/if}}
            <span class="text-muted ms-1 fw-bold">Points: {{user.points}}</span>
          </div>
          <a href="javascript: document.querySelector('#frmSignOut').submit();" class="logout-link">Logout</a>
        </div>
        <form method="POST" action="/account/signout" id="frmSignOut"></form>
      </div>

      <nav class="nav flex-column profile-nav">
        {{#if (eq user.role 1)}}
          <a class="nav-link" href="/account/profile/create">Create Auction</a>
          <a class="nav-link" href="#">Active Auctions</a>
          <a class="nav-link" href="#">Finished auctions</a>
          <hr class="my-3 text-secondary">
        {{/if}}
        
        <a class="nav-link {{#if showSettings}}active-custom{{/if}}" href="/account/profile">Account Settings</a>
        <a class="nav-link" href="#">My Ratings</a>
        <hr class="my-3 text-secondary">
        <a class="nav-link" href="/account/profile/watchlist">Watchlist</a>
        <a class="nav-link" href="/account/profile/active">Active Bids</a>
        <a class="nav-link" href="/account/profile/won">Won items</a>

        {{#unless (eq user.role 1)}}
          <div class="mt-3">
            <a href="#" class="btn-upgrade">Upgrade to seller</a>
          </div>
        {{/unless}}
      </nav>
    </div>

    <div class="col-md-9">
      
      {{#if showSettings}}
        <div class="settings-card">
          <div id="viewMode">
            <div class="row mb-3">
              <div class="col-sm-3 info-label">Email:</div>
              <div class="col-sm-9 info-value">{{user.email}}</div>
            </div>

            <div class="row mb-3">
              <div class="col-sm-3 info-label">Full name:</div>
              <div class="col-sm-9 info-value">
                  {{user.full_name}} 
                  </div>
            </div>

            <div class="row mb-3">
              <div class="col-sm-3 info-label">Address:</div>
              <div class="col-sm-9 info-value">
                  {{user.address}} 
                  </div>
            </div>

            <div class="row mb-3">
              <div class="col-sm-3 info-label">Date of Birth:</div>
              <!--div class="col-sm-9 info-value">
                {{#if user.dob}}
                  {{formatDate user.dob "DD/MM/YYYY"}}
                {{else}}
                  <span class="text-muted fst-italic">Not updated yet</span>
                {{/if}}
              </div-->
            </div>

            <div class="row mb-3">
              <div class="col-sm-3 info-label">Password:</div>
              <div class="col-sm-9 info-value password-dots">•••••••••••••</div>
            </div>

            <div class="text-end mt-3">
              <button type="button" id="btnEdit" class="btn-edit">Edit</button>
            </div>
          </div>
          <form id="editMode" class="d-none" action="/account/profile" method="POST">
              
              <div class="row mb-3">
                <div class="col-sm-3 info-label align-self-center">Email:</div>
                <div class="col-sm-9">
                  <input type="email" class="form-control" name="email" value="{{user.email}}" required>
                </div>
              </div>

              <div class="row mb-3">
                <div class="col-sm-3 info-label align-self-center">Full name:</div>
                <div class="col-sm-9">
                  <input type="text" class="form-control" name="full_name" value="{{user.full_name}}" required>
                </div>
              </div>

              <div class="row mb-3">
                <div class="col-sm-3 info-label align-self-center">Address:</div>
                <div class="col-sm-9">
                  <input type="text" class="form-control" name="address" value="{{user.address}}">
                </div>
              </div>

              <div class="row mb-3">
                <div class="col-sm-3 info-label align-self-center">DOB:</div>
                <div class="col-sm-9">
                  <!--input type="date" class="form-control" name="dob" value="{{formatDate user.dob 'YYYY-MM-DD'}}"-->
                </div>
              </div>

              <div class="row mb-4">
                <div class="col-sm-3 info-label align-self-center">Password:</div>
                <div class="col-sm-9">
                  <a href="/account/change-password" class="btn btn-primary fw-bold text-white">
                      <i class="bi bi-key-fill"></i> Change Password
                  </a>
                </div>
              </div>

              <div class="d-flex justify-content-end gap-2 mt-4">
                <button type="button" id="btnCancel" class="btn btn-secondary fw-bold">Cancel</button>
                <button type="submit" class="btn btn-success fw-bold px-4">
                  Save Changes
                </button>
              </div>
          </form>
        </div>
      {{else}}
        <div class="alert alert-warning">Please select an item from the menu.</div>
      {{/if}}
    </div>

    </div>
  </div>
</div>