{{#section 'css'}}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />
<link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css" />

<style>
    .product-card {
        transition: transform 0.2s;
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .product-image-placeholder {
        height: 180px;
        overflow: hidden;
        background-color: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .product-image-placeholder img {
        object-fit: cover;
        width: 100%;
        height: 100%;
    }

    .text-gold {
        color: #ffc107 !important;
    }

    .wishlist-icon {
        z-index: 10;
        cursor: pointer;
    }

    .wishlist-icon:hover {
        transform: scale(1.2);
        transition: 0.2s;
    }

    /* 2. Custom Style cho Carousel Navigation (Nút tròn) */
    .owl-nav button {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: 40px;
        height: 40px;
        border-radius: 50% !important;
        background-color: #0d6efd !important;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        color: #fff !important;
        font-size: 24px !important;
        display: flex !important;
        align-items: center;
        justify-content: center;
        transition: 0.3s;
        opacity: 0.7;
    }

    .owl-nav button:hover {
        background-color: #0b5ed7 !important;
        opacity: 1;
        color: #fff !important;
    }

    .owl-nav button.owl-prev {
        left: -20px;
    }

    .owl-nav button.owl-next {
        right: -20px;
    }

    .product-card-wrapper {
        padding: 5px;
        /* Khoảng cách giữa các card trong slider */
    }

    .home-section-title {
        font-weight: bold;
        margin-top: 30px;
        margin-bottom: 20px;
        font-size: 1.5rem;
    }
</style>
{{/section}}

<div class="container-fluid px-5">
    <h3 class="home-section-title">Highest Bids</h3>
    <div class="owl-carousel owl-theme" id="highestBidCarousel">
        {{#each topBidProducts}}
        {{> product_card this=this}}
        {{/each}}
    </div>
</div>

<div class="container-fluid px-5">
    <h3 class="home-section-title">Most active</h3>
    <div class="owl-carousel owl-theme" id="mostActiveCarousel">
        {{#each mostActiveProducts}}
        {{> product_card this=this}}
        {{/each}}
    </div>
</div>

<div class="container-fluid px-5 mb-5">
    <h3 class="home-section-title">Ending soon</h3>
    <div class="owl-carousel owl-theme" id="endingSoonCarousel">
        {{#each endingSoonProducts}}
        {{> product_card this=this}}
        {{/each}}
    </div>
</div>

{{#*inline "product_card"}}
<div class="product-card-wrapper h-100">
    <div class="product-card h-100 border rounded bg-white position-relative">

        <button
            class="wishlist-icon border-0 position-absolute top-0 end-0 m-2 bg-transparent {{#if is_liked}}active{{/if}}"
            data-id="{{product_id}}">
            {{#if is_liked}}
            <i class="bi bi-heart-fill text-gold fs-5"></i>
            {{else}}
            <i class="bi bi-heart fs-5 text-secondary"></i>
            {{/if}}
        </button>

        <div class="product-image-placeholder bg-light d-flex align-items-center justify-content-center text-muted">
            {{#if main_image}}
            <img src="/src/static/images/{{seller_id}}/{{product_id}}/{{main_image}}" class="img-fluid">
            {{else}}
            <img src="/src/static/images/{{seller_id}}/{{product_id}}/main_thumbs.jpg" class="img-fluid">
            {{/if}}
        </div>

        <div class="product-body p-3">
            <div class="d-flex justify-content-between align-items-start">
                <h5 class="product-title mb-1 text-truncate" title="{{name}}">
                    {{name}}
                </h5>
            </div>

            <p class="mb-1 small">
                <span class="fw-semibold">{{#if current_bidder_name}}{{current_bidder_name}}{{else}}No
                    Bids{{/if}}</span><br>
            </p>

            <p class="product-meta mb-1 small text-muted">
                <span class="fw-bold text-primary fs-5">${{current_price}}</span>
                <br>
                <span>Buy it now: <span class="fw-bold text-primary">{{#if
                        buy_now_price}}${{buy_now_price}}{{else}}None{{/if}}</span></span><br>

                <span>Listed: {{formatDate start_time "DD/MM/YYYY HH:mm"}}</span><br>
                <span>Time left: {{formatAuctionTime end_time "DD/MM/YYYY HH:mm"}}</span><br>
                <span>Bids: {{bid_count}}</span>
            </p>

            <div class="mt-2">
                <a href="/menu/detail?product_id={{product_id}}"
                    class="btn btn-sm btn-outline-primary w-100">Details</a>
            </div>
        </div>
    </div>
</div>
{{/inline}}

{{#section 'js'}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>

<script>
    $(document).ready(function () {

        // Cấu hình chung (Kiểu 1: loop = true)
        const commonConfig = {
            loop: true,       // Vòng lặp vô tận
            margin: 10,
            nav: true,
            dots: false,
            navText: ["<i class='bi bi-chevron-left'></i>", "<i class='bi bi-chevron-right'></i>"],
            responsive: {
                0: { items: 1 },
                600: { items: 2 },
                1000: { items: 4 } // Hiển thị 4 card trên Desktop
            }
        };

        $('#highestBidCarousel').owlCarousel(commonConfig);
        $('#mostActiveCarousel').owlCarousel(commonConfig);
        $('#endingSoonCarousel').owlCarousel(commonConfig);

        // Logic Wishlist
        $('.wishlist-icon').on('click', function (e) {
            e.preventDefault();
            const $btn = $(this);
            const productId = $btn.data('id');
            const $icon = $btn.find('i');

            $.post('/menu/watchlist/toggle', { product_id: productId }, function (data) {
                if (data.success) {
                    if (data.isAdded) {
                        $btn.addClass('active');
                        $icon.removeClass('bi-heart text-secondary').addClass('bi-heart-fill text-gold');
                    } else {
                        $btn.removeClass('active');
                        $icon.removeClass('bi-heart-fill text-gold').addClass('bi-heart text-secondary');
                    }
                } else {
                    alert(data.message || 'Something went wrong!');
                    if (data.message === 'Please login first!') {
                        window.location.href = '/account/signin';
                    }
                }
            }).fail(function (jqXHR) {
                if (jqXHR.status === 401) {
                    alert('Please login first!');
                    window.location.href = '/account/signin';
                } else {
                    alert('Cannot connect to server!');
                }
            });
        });
    });
</script>
{{/section}}