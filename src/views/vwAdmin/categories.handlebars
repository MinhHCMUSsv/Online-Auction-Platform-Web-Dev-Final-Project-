{{#section 'css'}}
<style>
    :root {
        --accent: #ff8c00;
        --accent-dark: #d66f00;
        --secondary-bg: #f8f9fa;
        --text-muted: #6c757d;
    }

    /* KPI Cards (Reused style for consistency) */
    .kpi-card {
        background: #fff;
        border: 1px solid rgba(0, 0, 0, 0.05);
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.02);
        height: 100%;
        transition: transform 0.2s;
    }

    .kpi-card:hover {
        transform: translateY(-3px);
        border-color: rgba(255, 140, 0, 0.3);
    }

    .kpi-icon {
        width: 48px;
        height: 48px;
        border-radius: 10px;
        background: rgba(255, 140, 0, 0.1);
        color: var(--accent);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    .kpi-value {
        font-size: 1.75rem;
        font-weight: 700;
        color: #212529;
        line-height: 1.2;
    }

    .kpi-label {
        font-size: 0.875rem;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 600;
    }

    /* Table Styles */
    .card-header-actions {
        background-color: transparent;
        border-bottom: 1px solid #f0f0f0;
        padding: 1.25rem;
    }

    .table thead th {
        background-color: #f9fafb;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.05em;
        color: var(--text-muted);
        font-weight: 600;
        border-bottom: 2px solid #e9ecef;
        padding: 1rem;
    }

    .table tbody td {
        padding: 1rem;
        vertical-align: middle;
    }

    .category-icon-placeholder {
        width: 40px;
        height: 40px;
        background-color: #f1f3f5;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-muted);
        font-size: 1.2rem;
    }

    /* Button Styles */
    .btn-warning-accent {
        background-color: var(--accent);
        color: #fff;
        border: none;
        font-weight: 600;
        padding: 0.5rem 1.2rem;
        border-radius: 8px;
    }

    .btn-warning-accent:hover {
        background-color: var(--accent-dark);
        color: #fff;
    }

    .btn-action-icon {
        width: 32px;
        height: 32px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 6px;
        transition: all 0.2s;
        color: #495057;
    }

    .btn-action-icon:hover {
        background-color: #f1f3f5;
        color: var(--accent);
    }

    .btn-action-icon.danger:hover {
        background-color: #fff5f5;
        color: #dc3545;
    }

    /* Subcategory styles */
    .subcategory-row {
        background-color: #f8f9fa;
        display: none;
    }

    .subcategory-row.show {
        display: table-row;
    }

    .subcategory-indent {
        padding-left: 3rem;
    }

    .expand-toggle {
        cursor: pointer;
        transition: transform 0.2s;
        user-select: none;
    }

    .expand-toggle.expanded {
        transform: rotate(90deg);
    }

    .badge-subcategory {
        background-color: #e7f3ff;
        color: #0066cc;
        font-size: 0.75rem;
        padding: 0.25rem 0.5rem;
    }

    .expand-toggle {
        display: inline-block;
        /* Đảm bảo icon có thể xoay */
        cursor: pointer;
        transition: transform 0.3s ease;
        /* Chuyển động mượt 0.3 giây */
        color: var(--text-muted);
        font-size: 1.1rem;
    }

    /* Khi có class expanded, icon sẽ xoay 90 độ xuống dưới */
    .expand-toggle.expanded {
        transform: rotate(90deg);
        color: var(--accent);
        /* Đổi màu khi mở để làm nổi bật */
    }

    /* Hiệu ứng mờ dần cho hàng con khi xuất hiện */
    .subcategory-row {
        background-color: #fdfdfd;
        display: none;
        animation: fadeIn 0.2s ease-in-out;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-5px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .subcategory-row.show {
        display: table-row;
    }
</style>
{{/section}}

<div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-4">
    <div>
        <h1 class="h3 fw-bold mb-1">Category Management</h1>
    </div>
    <div>
        <button class="btn btn-outline-warning shadow-sm" data-bs-toggle="modal" data-bs-target="#modalAddCategory">
            <i class="bi bi-plus-lg me-1"></i> New Category
        </button>
    </div>
</div>

<div class="card shadow-sm border-0 rounded-3">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th style="width: 50px;" class="ps-4"></th>
                    <th style="width: 80px;">#ID</th>
                    <th>Category Name</th>
                    <th style="width: 400px;" class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#if categories}}
                {{#each categories}}
                {{!-- Chỉ duyệt các Category Cha trước --}}
                {{#unless parent_id}}
                <tr class="parent-category border-bottom-0" data-category-id="{{category_id}}">
                    <td class="ps-4">
                        {{!-- Kiểm tra nếu category này có con thì hiện nút bấm --}}
                        <i class="bi bi-chevron-right expand-toggle" data-parent-id="{{category_id}}"></i>
                    </td>
                    <td><span class="text-muted fw-mono small">#{{category_id}}</span></td>
                    <td>
                        <div class="d-flex align-items-center">
                            <div class="category-icon-placeholder me-3">
                                <i class="bi bi-folder"></i>
                            </div>
                            <div class="fw-bold text-dark">{{name}}</div>
                        </div>
                    </td>

                    <td class="text-end pe-4">
                        <button class="btn-action-icon me-1" data-bs-toggle="modal" data-bs-target="#modalEditCategory"
                            data-id="{{category_id}}" data-name="{{name}}">
                            <i class="bi bi-pencil"></i>
                        </button>
                        <form action="/admin/categories/delete" method="post" class="d-inline-block m-0">
                            <input type="hidden" name="category_id" value="{{category_id}}">
                            <button type="submit" class="btn-action-icon danger" data-category-name="{{name}}"
                                data-category-type="parent">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                        </form>
                    </td>
                </tr>

                {{!-- VÒNG LẶP CON: Tìm các con của category cha hiện tại --}}
                {{#each ../categories}}
                {{#ifEquals parent_id ../category_id}}
                <tr class="subcategory-row" data-parent-id="{{parent_id}}">
                    <td class="ps-4"></td>
                    <td><span class="text-muted fw-mono small">#{{category_id}}</span></td>
                    <td class="subcategory-indent">
                        <div class="d-flex align-items-center">
                            <div class="category-icon-placeholder me-3" style="background-color: #e3f2fd;">
                                <i class="bi bi-arrow-return-right" style="font-size: 0.8rem;"></i>
                            </div>
                            <div>
                                <div class="fw-semibold text-dark">{{name}}</div>
                                <small class="text-muted">Subcategory</small>
                            </div>
                        </div>
                    </td>

                    <td class="text-end pe-4">
                        <button class="btn-action-icon me-1" data-bs-toggle="modal" data-bs-target="#modalEditCategory"
                            data-id="{{category_id}}" data-name="{{name}}">
                            <i class="bi bi-pencil"></i>
                        </button>
                            <form action="/admin/categories/delete" method="post" class="d-inline-block m-0">
                                <input type="hidden" name="category_id" value="{{category_id}}">
                                <button type="submit" class="btn-action-icon danger" data-category-name="{{name}}"
                                    data-category-type="subcategory">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        
                        </button>
                        </form>
                    </td>
                </tr>
                {{/ifEquals}}
                {{/each}}
                {{/unless}}
                {{/each}}
                {{else}}
                {{/if}}
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="modalAddCategory" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <form class="modal-content border-0 shadow" action="/admin/categories/add" method="post">
            <div class="modal-header border-bottom-0 pb-0">
                <h5 class="modal-title fw-bold">Add New Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body pt-4">
                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted small text-uppercase">Category Name</label>
                    <input name="name" type="text" class="form-control form-control-lg"
                        placeholder="e.g. Laptops, Furniture..." required maxlength="100">
                    <div class="invalid-feedback" id="add-name-error"></div>
                    <small class="text-muted">Category name must be unique and between 1-100 characters</small>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted small text-uppercase">Parent Category
                        (Optional)</label>
                    <select name="parent_id" class="form-select">
                        <option value="">None (Root Category)</option>
                        {{#each categories}}
                        {{#unless parent_id}}
                        <option value="{{category_id}}">{{name}}</option>
                        {{/unless}}
                        {{/each}}
                    </select>
                    <small class="text-muted">Leave empty to create a root category</small>
                </div>
            </div>
            <div class="modal-footer border-top-0 pt-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-warning-accent px-4">Create Category</button>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="modalEditCategory" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <form class="modal-content border-0 shadow" action="/admin/categories/edit" method="post">
            <div class="modal-header border-bottom-0 pb-0">
                <h5 class="modal-title fw-bold">Edit Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body pt-4">
                <input type="hidden" name="category_id" id="editCategoryId">
                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted small text-uppercase">Category Name</label>
                    <input name="name" id="editCategoryName" type="text" class="form-control form-control-lg" required
                        maxlength="100">
                    <div class="invalid-feedback" id="edit-name-error"></div>
                    <small class="text-muted">Category name must be unique and between 1-100 characters</small>
                </div>
            </div>
            <div class="modal-footer border-top-0 pt-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-warning-accent px-4">Save Changes</button>
            </div>
        </form>
    </div>
</div>

{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    // Edit Category Modal
    const editModal = document.getElementById('modalEditCategory');
    if (editModal) {
        editModal.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget;
            const id = button.getAttribute('data-id');
            const name = button.getAttribute('data-name');

            editModal.querySelector('#editCategoryId').value = id;
            editModal.querySelector('#editCategoryName').value = name;
        });
    }

    // Handle Add Category modal for both category and subcategory
    const addModal = document.getElementById('modalAddCategory');
    if (addModal) {
        addModal.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget;
            const parentId = button.getAttribute('data-parent-id');
            const parentName = button.getAttribute('data-parent-name');

            // If opening from subcategory button, pre-select parent
            if (parentId && parentName) {
                const parentSelect = addModal.querySelector('select[name="parent_id"]');
                if (parentSelect) {
                    parentSelect.value = parentId;
                }
            } else {
                // Reset form if opening fresh
                const parentSelect = addModal.querySelector('select[name="parent_id"]');
                const nameInput = addModal.querySelector('input[name="name"]');
                if (parentSelect) parentSelect.value = '';
                if (nameInput) nameInput.value = '';
            }
        });
    }

    // Handle form submissions with SweetAlert
    document.querySelectorAll('form[action="/admin/categories/add"]').forEach(form => {
        form.addEventListener('submit', function (e) {
            e.preventDefault();

            const formData = new FormData(this);
            const categoryName = formData.get('name');
            const parentId = formData.get('parent_id');
            const isSubcategory = parentId && parentId.trim() !== '';

            // Validate required fields
            if (!categoryName || categoryName.trim() === '') {
                Swal.fire({
                    icon: 'error',
                    title: 'Missing Category Name',
                    text: 'Please enter a category name.',
                    confirmButtonColor: '#ff8c00'
                });
                return;
            }

            // Show confirmation dialog
            const confirmTitle = isSubcategory ? 'Create New Subcategory?' : 'Create New Category?';
            const confirmText = isSubcategory
                ? `Create subcategory "${categoryName}"?`
                : `Create category "${categoryName}"?`;

            Swal.fire({
                title: confirmTitle,
                text: confirmText,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#ff8c00',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, create it!',
                cancelButtonText: 'Cancel',
                reverseButtons: true
            }).then((result) => {
                if (!result.isConfirmed) return;

                // Show loading
                const loadingTitle = isSubcategory ? 'Creating Subcategory...' : 'Creating Category...';
                Swal.fire({
                    title: loadingTitle,
                    allowOutsideClick: false,
                    showConfirmButton: false,
                    willOpen: () => {
                        Swal.showLoading()
                    }
                });

                // Debug: Log form data
                console.log('Form Data:', {
                    name: categoryName,
                    parent_id: parentId,
                    is_subcategory: isSubcategory
                });

                // API call with detailed error handling
                const requestBody = {
                    name: categoryName,
                    parent_id: parentId || null
                };

                fetch(this.action, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(requestBody)
                })
                    .then(response => {
                        return response.json().then(data => ({
                            status: response.status,
                            ok: response.ok,
                            data: data
                        }));
                    })
                    .then(result => {
                        if (result.ok) {
                            const successTitle = isSubcategory ? 'Subcategory Created!' : 'Category Created!';
                            const successText = isSubcategory
                                ? `Subcategory "${categoryName}" has been added successfully`
                                : `Category "${categoryName}" has been added successfully`;

                            Swal.fire({
                                icon: 'success',
                                title: successTitle,
                                text: successText,
                                confirmButtonColor: '#ff8c00',
                                timer: 2000,
                                timerProgressBar: true
                            }).then(() => {
                                window.location.reload();
                            });
                        } else {
                            // Handle specific error types
                            let errorTitle = 'Creation Failed';
                            let errorText = 'Unable to create category. Please try again.';

                            if (result.data && result.data.error) {
                                switch (result.data.error.type) {
                                    case 'DUPLICATE_NAME':
                                        errorTitle = 'Duplicate Category Name';
                                        errorText = isSubcategory
                                            ? `A subcategory with the name "${categoryName}" already exists in this parent category. Please choose a different name.`
                                            : `A category with the name "${categoryName}" already exists. Please choose a different name.`;
                                        break;
                                    case 'INVALID_PARENT':
                                        errorTitle = 'Invalid Parent Category';
                                        errorText = 'The selected parent category is invalid or does not exist.';
                                        break;
                                    case 'VALIDATION_ERROR':
                                        errorTitle = 'Validation Error';
                                        errorText = result.data.error.message || 'Please check your input and try again.';
                                        break;
                                    default:
                                        errorText = result.data.error.message || errorText;
                                }
                            }

                            Swal.fire({
                                icon: 'error',
                                title: errorTitle,
                                text: errorText,
                                confirmButtonColor: '#ff8c00'
                            });
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Creation Failed',
                            text: 'Unable to create category. Please check your connection and try again.',
                            confirmButtonColor: '#ff8c00'
                        });
                    });

            }); // Close confirmation dialog
        });
    });

    // Handle edit form
    document.querySelector('form[action="/admin/categories/edit"]').addEventListener('submit', function (e) {
        e.preventDefault();

        const formData = new FormData(this);
        const categoryName = formData.get('name');
        const categoryId = formData.get('category_id');

        // Show confirmation dialog
        Swal.fire({
            title: 'Update Category?',
            text: `Save changes to "${categoryName}"?`,
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#ff8c00',
            cancelButtonColor: '#6c757d',
            confirmButtonText: 'Yes, update it!',
            cancelButtonText: 'Cancel',
            reverseButtons: true
        }).then((result) => {
            if (!result.isConfirmed) return;

            // Show loading
            Swal.fire({
                title: 'Updating Category...',
                allowOutsideClick: false,
                showConfirmButton: false,
                willOpen: () => {
                    Swal.showLoading()
                }
            });

            // API call with detailed error handling
            const requestBody = {
                category_id: categoryId,
                name: categoryName
            };

            fetch(this.action, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(requestBody)
            })
                .then(response => {
                    return response.json().then(data => ({
                        status: response.status,
                        ok: response.ok,
                        data: data
                    }));
                })
                .then(result => {
                    if (result.ok) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Category Updated!',
                            text: `"${categoryName}" has been updated successfully`,
                            confirmButtonColor: '#ff8c00',
                            timer: 2000,
                            timerProgressBar: true
                        }).then(() => {
                            window.location.reload();
                        });
                    } else {
                        // Handle specific error types
                        let errorTitle = 'Update Failed';
                        let errorText = 'Unable to update category. Please try again.';

                        if (result.data && result.data.error) {
                            switch (result.data.error.type) {
                                case 'DUPLICATE_NAME':
                                    errorTitle = 'Duplicate Category Name';
                                    errorText = `A category with the name "${categoryName}" already exists. Please choose a different name.`;
                                    break;
                                case 'CATEGORY_NOT_FOUND':
                                    errorTitle = 'Category Not Found';
                                    errorText = 'The category you are trying to update no longer exists.';
                                    break;
                                case 'VALIDATION_ERROR':
                                    errorTitle = 'Validation Error';
                                    errorText = result.data.error.message || 'Please check your input and try again.';
                                    break;
                                default:
                                    errorText = result.data.error.message || errorText;
                            }
                        }

                        Swal.fire({
                            icon: 'error',
                            title: errorTitle,
                            text: errorText,
                            confirmButtonColor: '#ff8c00'
                        });
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Update Failed',
                        text: 'Unable to update category. Please check your connection and try again.',
                        confirmButtonColor: '#ff8c00'
                    });
                });

        }); // Close edit confirmation dialog
    });

    // Handle delete forms with confirmation and validation
    document.querySelectorAll('form[action="/admin/categories/delete"]').forEach(form => {
        form.addEventListener('submit', function (e) {
            e.preventDefault();

            const categoryId = this.querySelector('input[name="category_id"]').value;
            const categoryRow = this.closest('tr');
            const isSubcategory = categoryRow.classList.contains('subcategory-row');
            const categoryName = categoryRow.querySelector('.fw-bold, .fw-semibold').textContent.trim();

            // Different validation based on category type
            if (isSubcategory) {
                // For subcategory: Check if it has products
                checkCategoryCanBeDeleted(categoryId, categoryName, 'subcategory', this);
            } else {
                // For parent category: Check if it has subcategories first
                const hasSubcategories = document.querySelectorAll(`.subcategory-row[data-parent-id="${categoryId}"]`).length > 0;

                if (hasSubcategories) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Cannot Delete Category',
                        html: `Cannot delete <strong>"${categoryName}"</strong> because it contains subcategories.<br><br><small class="text-muted">Please delete all subcategories first, then try again.</small>`,
                        confirmButtonColor: '#ff8c00'
                    });
                } else {
                    // Check if parent category has products
                    checkCategoryCanBeDeleted(categoryId, categoryName, 'category', this);
                }
            }
        });
    });

    // Check if category can be deleted (has products or not)
    function checkCategoryCanBeDeleted(categoryId, categoryName, type, formElement) {
        // Show loading while checking
        Swal.fire({
            title: 'Checking...',
            text: `Checking if ${type} can be deleted...`,
            allowOutsideClick: false,
            allowEscapeKey: false,
            showConfirmButton: false,
            didOpen: () => {
                Swal.showLoading()
            }
        });

        // Check with backend if category has products
        fetch(`/admin/categories/check-delete/${categoryId}`, {
            method: 'GET',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.canDelete) {
                // Category can be deleted, show confirmation
                showDeleteConfirmation(categoryId, categoryName, type, formElement);
            } else {
                // Category has products, cannot delete
                let errorTitle = `Cannot Delete ${type.charAt(0).toUpperCase() + type.slice(1)}`;
                let errorText = `Cannot delete "${categoryName}" because it contains ${data.productCount} product(s).`;
                
                

                Swal.fire({
                    icon: 'error',
                    title: errorTitle,
                    html: errorText,
                    confirmButtonColor: '#ff8c00'
                });
            }
        })
        .catch(error => {
            console.error('Error checking category:', error);
            // Don't allow deletion if we can't check - show error instead
            Swal.fire({
                icon: 'error',
                title: 'Unable to Check Category Status',
                html: `Cannot verify if "${categoryName}" has products.<br><br><small class="text-muted">Please try again later or contact administrator.</small>`,
                confirmButtonColor: '#ff8c00'
            });
        });
    }

    // Show delete confirmation dialog
    function showDeleteConfirmation(categoryId, categoryName, type, formElement) {
        const title = type === 'subcategory' ? 'Delete Subcategory?' : 'Delete Category?';
        const confirmText = type === 'subcategory' ? 'Yes, delete subcategory!' : 'Yes, delete category!';
        
        Swal.fire({
            title: title,
            html: `Are you sure you want to delete the ${type} <strong>"${categoryName}"</strong>?<br><br><small class="text-muted">This action cannot be undone.</small>`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545',
            cancelButtonColor: '#6c757d',
            confirmButtonText: confirmText,
            cancelButtonText: 'Cancel',
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                performDelete(categoryId, categoryName, type, formElement);
            }
        });
    }

    // Perform the actual deletion
    function performDelete(categoryId, categoryName, type, formElement) {
        // Show loading
        Swal.fire({
            title: `Deleting ${type.charAt(0).toUpperCase() + type.slice(1)}...`,
            text: 'Please wait while we delete the category.',
            allowOutsideClick: false,
            allowEscapeKey: false,
            showConfirmButton: false,
            didOpen: () => {
                Swal.showLoading()
            }
        });

        fetch(formElement.action, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ category_id: categoryId })
        })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Deleted Successfully!',
                        text: `${type.charAt(0).toUpperCase() + type.slice(1)} "${categoryName}" has been deleted`,
                        confirmButtonColor: '#ff8c00',
                        timer: 2000,
                        timerProgressBar: true
                    }).then(() => {
                        window.location.reload();
                    });
                } else {
                    // Handle specific errors from backend
                    let errorTitle = 'Delete Failed';
                    let errorText = `Unable to delete ${type}. Please try again.`;

                    if (data.error) {
                        switch (data.error.type) {
                            case 'HAS_PRODUCTS':
                                errorTitle = `${type.charAt(0).toUpperCase() + type.slice(1)} Has Products`;
                                errorText = `Cannot delete "${categoryName}" because it contains ${data.error.productCount} product(s).`;
                                break;
                            case 'HAS_SUBCATEGORIES':
                                errorTitle = 'Category Has Subcategories';
                                errorText = `Cannot delete "${categoryName}" because it contains ${data.error.subcategoryCount} subcategory(ies). Please delete all subcategories first.`;
                                break;
                            case 'CATEGORY_NOT_FOUND':
                                errorTitle = 'Category Not Found';
                                errorText = 'The category you are trying to delete no longer exists.';
                                break;
                            default:
                                errorText = data.error.message || errorText;
                        }
                    }

                    Swal.fire({
                        icon: 'error',
                        title: errorTitle,
                        html: errorText,
                        confirmButtonColor: '#ff8c00'
                    });
                }
            })
            .catch(error => {
                console.error('Delete error:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Delete Failed',
                    text: `Unable to delete ${type}. Please check your connection and try again.`,
                    confirmButtonColor: '#ff8c00'
                });
            });
    }

    document.querySelectorAll('.expand-toggle').forEach(toggle => {
        toggle.addEventListener('click', function (e) {
            const parentId = this.getAttribute('data-parent-id');
            // Tìm tất cả các hàng subcategory có parent-id tương ứng
            const subcategoryRows = document.querySelectorAll(`.subcategory-row[data-parent-id="${parentId}"]`);

            // Toggle class show cho các hàng con
            subcategoryRows.forEach(row => {
                row.classList.toggle('show');
            });

            // Xoay mũi tên
            this.classList.toggle('expanded');
        });
    });
</script>
