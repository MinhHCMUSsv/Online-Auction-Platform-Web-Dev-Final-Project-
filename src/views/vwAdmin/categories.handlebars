<div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-4">
    <div>
        <h1 class="h3 fw-bold mb-1">üóÇÔ∏è Category Management</h1>
        <p class="text-muted mb-0">Organize your products for better discoverability.</p>
    </div>
    <div>
        <button class="btn btn-warning-accent shadow-sm" data-bs-toggle="modal" data-bs-target="#modalAddCategory">
            <i class="bi bi-plus-lg me-1"></i> New Category
        </button>
    </div>
</div>

<div class="card shadow-sm border-0 rounded-3">
    <div class="card-header-actions d-flex justify-content-between align-items-center flex-wrap gap-3">
        <div class="d-flex align-items-center gap-2">
            <div class="input-group" style="width: 300px;">
                <span class="input-group-text bg-white border-end-0 text-muted"><i class="bi bi-search"></i></span>
                <input type="search" class="form-control border-start-0 ps-0" name="q" placeholder="Search categories...">
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th style="width: 50px;" class="ps-4"></th>
                    <th style="width: 80px;">#ID</th>
                    <th>Category Name</th>
                    <th style="width: 400px;" class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
    {{#if categories}}
        {{#each categories}}
            {{!-- Ch·ªâ duy·ªát c√°c Category Cha tr∆∞·ªõc --}}
            {{#unless parent_id}}
                <tr class="parent-category border-bottom-0" data-category-id="{{category_id}}">
                    <td class="ps-4">
                        {{!-- Ki·ªÉm tra n·∫øu category n√†y c√≥ con th√¨ hi·ªán n√∫t b·∫•m --}}
                        <i class="bi bi-chevron-right expand-toggle" 
                           data-parent-id="{{category_id}}"></i>
                    </td>
                    <td><span class="text-muted fw-mono small">#{{category_id}}</span></td>
                    <td>
                        <div class="d-flex align-items-center">
                            <div class="category-icon-placeholder me-3">
                                <i class="bi bi-folder"></i>
                            </div>
                            <div class="fw-bold text-dark">{{name}}</div>
                        </div>
                    </td>
                    
                    <td class="text-end pe-4">
                        <button class="btn-action-icon me-1" data-bs-toggle="modal" data-bs-target="#modalEditCategory" data-id="{{category_id}}" data-name="{{name}}">
                            <i class="bi bi-pencil"></i>
                        </button>
                        <form action="/admin/categories/delete" method="post" class="d-inline-block m-0">
                            <input type="hidden" name="category_id" value="{{category_id}}">
                            <button type="submit" class="btn-action-icon danger" onclick="return confirm('Are you sure?');">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>

                {{!-- V√íNG L·∫∂P CON: T√¨m c√°c con c·ªßa category cha hi·ªán t·∫°i --}}
                {{#each ../categories}}
                    {{#ifEquals parent_id ../category_id}}
                    <tr class="subcategory-row" data-parent-id="{{parent_id}}">
                        <td class="ps-4"></td>
                        <td><span class="text-muted fw-mono small">#{{category_id}}</span></td>
                        <td class="subcategory-indent">
                            <div class="d-flex align-items-center">
                                <div class="category-icon-placeholder me-3" style="background-color: #e3f2fd;">
                                    <i class="bi bi-arrow-return-right" style="font-size: 0.8rem;"></i>
                                </div>
                                <div>
                                    <div class="fw-semibold text-dark">{{name}}</div>
                                    <small class="text-muted">Subcategory</small>
                                </div>
                            </div>
                        </td>
                        
                        <td class="text-end pe-4">
                            <button class="btn-action-icon me-1" data-bs-toggle="modal" data-bs-target="#modalEditCategory" data-id="{{category_id}}" data-name="{{name}}">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <form action="/admin/categories/delete" method="post" class="d-inline-block m-0">
                                <input type="hidden" name="category_id" value="{{category_id}}">
                                <button type="submit" class="btn-action-icon danger" onclick="return confirm('Are you sure?');">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    {{/ifEquals}}
                {{/each}}
            {{/unless}}
        {{/each}}
    {{else}}
        {{/if}}
</tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="modalAddCategory" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <form class="modal-content border-0 shadow" action="/admin/categories/add" method="post">
            <div class="modal-header border-bottom-0 pb-0">
                <h5 class="modal-title fw-bold">Add New Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body pt-4">
                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted small text-uppercase">Category Name</label>
                    <input name="name" type="text" class="form-control form-control-lg" placeholder="e.g. Laptops, Furniture..." required maxlength="100">
                    <div class="invalid-feedback" id="add-name-error"></div>
                    <small class="text-muted">Category name must be unique and between 1-100 characters</small>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted small text-uppercase">Parent Category (Optional)</label>
                    <select name="parent_id" class="form-select">
                        <option value="">None (Root Category)</option>
                        {{#each categories}}
                        {{#unless parent_id}}
                        <option value="{{category_id}}">{{name}}</option>
                        {{/unless}}
                        {{/each}}
                    </select>
                    <small class="text-muted">Leave empty to create a root category</small>
                </div>
            </div>
            <div class="modal-footer border-top-0 pt-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-warning-accent px-4">Create Category</button>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="modalEditCategory" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <form class="modal-content border-0 shadow" action="/admin/categories/edit" method="post">
            <div class="modal-header border-bottom-0 pb-0">
                <h5 class="modal-title fw-bold">Edit Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body pt-4">
                <input type="hidden" name="category_id" id="editCategoryId">
                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted small text-uppercase">Category Name</label>
                    <input name="name" id="editCategoryName" type="text" class="form-control form-control-lg" required maxlength="100">
                    <div class="invalid-feedback" id="edit-name-error"></div>
                    <small class="text-muted">Category name must be unique and between 1-100 characters</small>
                </div>
            </div>
            <div class="modal-footer border-top-0 pt-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-warning-accent px-4">Save Changes</button>
            </div>
        </form>
    </div>
</div>

