{{#section 'css'}}
<style>
    :root {
        --accent: #ff8c00;
        --accent-dark: #d66f00;
        --secondary-bg: #f8f9fa;
        --text-muted: #6c757d;
    }

    /* KPI Cards (Reused style for consistency) */
    .kpi-card {
        background: #fff;
        border: 1px solid rgba(0,0,0,0.05);
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 2px 6px rgba(0,0,0,0.02);
        height: 100%;
        transition: transform 0.2s;
    }
    
    .kpi-card:hover {
        transform: translateY(-3px);
        border-color: rgba(255, 140, 0, 0.3);
    }

    .kpi-icon {
        width: 48px;
        height: 48px;
        border-radius: 10px;
        background: rgba(255, 140, 0, 0.1);
        color: var(--accent);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    .kpi-value {
        font-size: 1.75rem;
        font-weight: 700;
        color: #212529;
        line-height: 1.2;
    }

    .kpi-label {
        font-size: 0.875rem;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 600;
    }

    /* Table Styles */
    .card-header-actions {
        background-color: transparent;
        border-bottom: 1px solid #f0f0f0;
        padding: 1.25rem;
    }

    .table thead th {
        background-color: #f9fafb;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.05em;
        color: var(--text-muted);
        font-weight: 600;
        border-bottom: 2px solid #e9ecef;
        padding: 1rem;
    }

    .table tbody td {
        padding: 1rem;
        vertical-align: middle;
    }

    .category-icon-placeholder {
        width: 40px;
        height: 40px;
        background-color: #f1f3f5;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-muted);
        font-size: 1.2rem;
    }

    /* Button Styles */
    .btn-warning-accent {
        background-color: var(--accent);
        color: #fff;
        border: none;
        font-weight: 600;
        padding: 0.5rem 1.2rem;
        border-radius: 8px;
    }

    .btn-warning-accent:hover {
        background-color: var(--accent-dark);
        color: #fff;
    }

    .btn-action-icon {
        width: 32px;
        height: 32px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 6px;
        transition: all 0.2s;
        color: #495057;
    }

    .btn-action-icon:hover {
        background-color: #f1f3f5;
        color: var(--accent);
    }

    .btn-action-icon.danger:hover {
        background-color: #fff5f5;
        color: #dc3545;
    }

</style>
{{/section}}

<div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-4">
    <div>
        <h1 class="h3 fw-bold mb-1">üóÇÔ∏è Category Management</h1>
        <p class="text-muted mb-0">Organize your products for better discoverability.</p>
    </div>
    <div>
        <button class="btn btn-warning-accent shadow-sm" data-bs-toggle="modal" data-bs-target="#modalAddCategory">
            <i class="bi bi-plus-lg me-1"></i> New Category
        </button>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-12 col-md-4">
        <div class="kpi-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="kpi-label mb-1">Total Categories</div>
                    <div class="kpi-value">{{#if categories}}{{categories.length}}{{else}}0{{/if}}</div>
                </div>
                <div class="kpi-icon">
                    <i class="bi bi-folder"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-4">
        <div class="kpi-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="kpi-label mb-1">Total Linked Products</div>
                    <div class="kpi-value">
                        124
                    </div>
                </div>
                <div class="kpi-icon" style="background: rgba(31, 154, 84, 0.1); color: #1f9a54;">
                    <i class="bi bi-box-seam"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-4">
        <div class="kpi-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="kpi-label mb-1">Top Category</div>
                    <div class="kpi-value h4 mb-0 text-truncate" style="max-width: 150px;">Electronics</div>
                    <small class="text-success fw-bold"><i class="bi bi-arrow-up"></i> 45 items</small>
                </div>
                <div class="kpi-icon" style="background: rgba(13, 110, 253, 0.1); color: #0d6efd;">
                    <i class="bi bi-graph-up-arrow"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm border-0 rounded-3">
    <div class="card-header-actions d-flex justify-content-between align-items-center flex-wrap gap-3">
        <div class="d-flex align-items-center gap-2">
            <div class="input-group" style="width: 300px;">
                <span class="input-group-text bg-white border-end-0 text-muted"><i class="bi bi-search"></i></span>
                <input type="search" class="form-control border-start-0 ps-0" name="q" placeholder="Search categories...">
            </div>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-filter me-1"></i> Filter
            </button>
            <button class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-download me-1"></i> Export
            </button>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th style="width: 80px;" class="ps-4">#ID</th>
                    <th>Category Name</th>
                    <th style="width: 200px;">Products Count</th>
                    <th style="width: 200px;">Created At</th>
                    <th style="width: 150px;" class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#if categories}}
                    {{#each categories}}
                    <tr>
                        <td class="ps-4">
                            <span class="text-muted fw-mono small">#{{category_id}}</span>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="category-icon-placeholder me-3">
                                    <i class="bi bi-tag"></i>
                                </div>
                                <div>
                                    <div class="fw-bold text-dark">{{name}}</div>
                                </div>
                            </div>
                        </td>
                        <td>
                            {{#if productCount}}
                                <span class="badge rounded-pill text-bg-light border px-3 py-2">
                                    {{productCount}} items
                                </span>
                            {{else}}
                                <span class="badge rounded-pill bg-secondary bg-opacity-10 text-secondary px-3 py-2">Empty</span>
                            {{/if}}
                        </td>
                        <td>
                            <div class="text-muted small">
                                <i class="bi bi-calendar3 me-1"></i>
                                {{#if created_at}}{{created_at}}{{else}}N/A{{/if}}
                            </div>
                        </td>
                        <td class="text-end pe-4">
                            <button class="btn-action-icon me-1" 
                                    data-bs-toggle="modal" 
                                    data-bs-target="#modalEditCategory" 
                                    data-id="{{category_id}}" 
                                    data-name="{{name}}"
                                    title="Edit">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <form action="/admin/categories/delete" method="post" class="d-inline-block m-0">
                                <input type="hidden" name="category_id" value="{{category_id}}">
                                <button type="submit" class="btn-action-icon danger" title="Delete" onclick="return confirm('Are you sure you want to delete this category?');">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                {{else}}
                    <tr>
                        <td colspan="5" class="text-center py-5">
                            <div class="py-4">
                                <div class="mb-3 text-muted">
                                    <i class="bi bi-folder-x display-4"></i>
                                </div>
                                <h5 class="fw-bold">No Categories Found</h5>
                                <p class="text-muted mb-4">Get started by creating your first product category.</p>
                                <button class="btn btn-warning-accent" data-bs-toggle="modal" data-bs-target="#modalAddCategory">
                                    Create Category
                                </button>
                            </div>
                        </td>
                    </tr>
                {{/if}}
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="modalAddCategory" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <form class="modal-content border-0 shadow" action="/admin/categories/add" method="post">
            <div class="modal-header border-bottom-0 pb-0">
                <h5 class="modal-title fw-bold">Add New Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body pt-4">
                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted small text-uppercase">Category Name</label>
                    <input name="name" type="text" class="form-control form-control-lg" placeholder="e.g. Laptops, Furniture..." required>
                </div>
            </div>
            <div class="modal-footer border-top-0 pt-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-warning-accent px-4">Create Category</button>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="modalEditCategory" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <form class="modal-content border-0 shadow" action="/admin/categories/edit" method="post">
            <div class="modal-header border-bottom-0 pb-0">
                <h5 class="modal-title fw-bold">Edit Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body pt-4">
                <input type="hidden" name="category_id" id="editCategoryId">
                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted small text-uppercase">Category Name</label>
                    <input name="name" id="editCategoryName" type="text" class="form-control form-control-lg" required>
                </div>
            </div>
            <div class="modal-footer border-top-0 pt-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-warning-accent px-4">Save Changes</button>
            </div>
        </form>
    </div>
</div>

{{#section 'js'}}
<script>
    const editModal = document.getElementById('modalEditCategory');
    if (editModal) {
        editModal.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget;
            const id = button.getAttribute('data-id');
            const name = button.getAttribute('data-name');
            
            editModal.querySelector('#editCategoryId').value = id;
            editModal.querySelector('#editCategoryName').value = name;
        });
    }
</script>
{{/section}}