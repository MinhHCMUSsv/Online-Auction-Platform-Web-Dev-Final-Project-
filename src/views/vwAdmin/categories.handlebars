<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    // Edit Category Modal
    const editModal = document.getElementById('modalEditCategory');
    if (editModal) {
        editModal.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget;
            const id = button.getAttribute('data-id');
            const name = button.getAttribute('data-name');
            
            editModal.querySelector('#editCategoryId').value = id;
            editModal.querySelector('#editCategoryName').value = name;
        });
    }

    // Handle Add Category modal for both category and subcategory
    const addModal = document.getElementById('modalAddCategory');
    if (addModal) {
        addModal.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget;
            const parentId = button.getAttribute('data-parent-id');
            const parentName = button.getAttribute('data-parent-name');
            
            // If opening from subcategory button, pre-select parent
            if (parentId && parentName) {
                const parentSelect = addModal.querySelector('select[name="parent_id"]');
                if (parentSelect) {
                    parentSelect.value = parentId;
                }
            } else {
                // Reset form if opening fresh
                const parentSelect = addModal.querySelector('select[name="parent_id"]');
                const nameInput = addModal.querySelector('input[name="name"]');
                if (parentSelect) parentSelect.value = '';
                if (nameInput) nameInput.value = '';
            }
        });
    }

    // Handle form submissions with SweetAlert
    document.querySelectorAll('form[action="/admin/categories/add"]').forEach(form => {
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const categoryName = formData.get('name');
            const parentId = formData.get('parent_id');
            const isSubcategory = parentId && parentId.trim() !== '';
            
            // Validate required fields
            if (!categoryName || categoryName.trim() === '') {
                Swal.fire({
                    icon: 'error',
                    title: 'Missing Category Name',
                    text: 'Please enter a category name.',
                    confirmButtonColor: '#ff8c00'
                });
                return;
            }
            
            // Show loading
            const loadingTitle = isSubcategory ? 'Creating Subcategory...' : 'Creating Category...';
            Swal.fire({
                title: loadingTitle,
                allowOutsideClick: false,
                showConfirmButton: false,
                willOpen: () => {
                    Swal.showLoading()
                }
            });
            
            // Debug: Log form data
            console.log('Form Data:', {
                name: categoryName,
                parent_id: parentId,
                is_subcategory: isSubcategory
            });
            
            // API call with detailed error handling
            const requestBody = {
                name: categoryName,
                parent_id: parentId || null
            };
            
            fetch(this.action, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(requestBody)
            })
            .then(response => {
                return response.json().then(data => ({
                    status: response.status,
                    ok: response.ok,
                    data: data
                }));
            })
            .then(result => {
                if (result.ok) {
                    const successTitle = isSubcategory ? 'Subcategory Created!' : 'Category Created!';
                    const successText = isSubcategory 
                        ? `Subcategory "${categoryName}" has been added successfully`
                        : `Category "${categoryName}" has been added successfully`;
                        
                    Swal.fire({
                        icon: 'success',
                        title: successTitle,
                        text: successText,
                        confirmButtonColor: '#ff8c00',
                        timer: 2000,
                        timerProgressBar: true
                    }).then(() => {
                        window.location.reload();
                    });
                } else {
                    // Handle specific error types
                    let errorTitle = 'Creation Failed';
                    let errorText = 'Unable to create category. Please try again.';
                    
                    if (result.data && result.data.error) {
                        switch (result.data.error.type) {
                            case 'DUPLICATE_NAME':
                                errorTitle = 'Duplicate Category Name';
                                errorText = isSubcategory 
                                    ? `A subcategory with the name "${categoryName}" already exists in this parent category. Please choose a different name.`
                                    : `A category with the name "${categoryName}" already exists. Please choose a different name.`;
                                break;
                            case 'INVALID_PARENT':
                                errorTitle = 'Invalid Parent Category';
                                errorText = 'The selected parent category is invalid or does not exist.';
                                break;
                            case 'VALIDATION_ERROR':
                                errorTitle = 'Validation Error';
                                errorText = result.data.error.message || 'Please check your input and try again.';
                                break;
                            default:
                                errorText = result.data.error.message || errorText;
                        }
                    }
                    
                    Swal.fire({
                        icon: 'error',
                        title: errorTitle,
                        text: errorText,
                        confirmButtonColor: '#ff8c00'
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Creation Failed',
                    text: 'Unable to create category. Please check your connection and try again.',
                    confirmButtonColor: '#ff8c00'
                });
            });
        });
    });

    // Handle edit form
    document.querySelector('form[action="/admin/categories/edit"]').addEventListener('submit', function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        const categoryName = formData.get('name');
        const categoryId = formData.get('category_id');
        
        // Show loading
        Swal.fire({
            title: 'Updating Category...',
            allowOutsideClick: false,
            showConfirmButton: false,
            willOpen: () => {
                Swal.showLoading()
            }
        });
        
        // API call with detailed error handling
        const requestBody = {
            category_id: categoryId,
            name: categoryName
        };
        
        fetch(this.action, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(requestBody)
        })
        .then(response => {
            return response.json().then(data => ({
                status: response.status,
                ok: response.ok,
                data: data
            }));
        })
        .then(result => {
            if (result.ok) {
                Swal.fire({
                    icon: 'success',
                    title: 'Category Updated!',
                    text: `"${categoryName}" has been updated successfully`,
                    confirmButtonColor: '#ff8c00',
                    timer: 2000,
                    timerProgressBar: true
                }).then(() => {
                    window.location.reload();
                });
            } else {
                // Handle specific error types
                let errorTitle = 'Update Failed';
                let errorText = 'Unable to update category. Please try again.';
                
                if (result.data && result.data.error) {
                    switch (result.data.error.type) {
                        case 'DUPLICATE_NAME':
                            errorTitle = 'Duplicate Category Name';
                            errorText = `A category with the name "${categoryName}" already exists. Please choose a different name.`;
                            break;
                        case 'CATEGORY_NOT_FOUND':
                            errorTitle = 'Category Not Found';
                            errorText = 'The category you are trying to update no longer exists.';
                            break;
                        case 'VALIDATION_ERROR':
                            errorTitle = 'Validation Error';
                            errorText = result.data.error.message || 'Please check your input and try again.';
                            break;
                        default:
                            errorText = result.data.error.message || errorText;
                    }
                }
                
                Swal.fire({
                    icon: 'error',
                    title: errorTitle,
                    text: errorText,
                    confirmButtonColor: '#ff8c00'
                });
            }
        })
        .catch(error => {
            console.error('Error:', error);
            Swal.fire({
                icon: 'error',
                title: 'Update Failed',
                text: 'Unable to update category. Please check your connection and try again.',
                confirmButtonColor: '#ff8c00'
            });
        });
    });

    // Handle delete forms with confirmation
    document.querySelectorAll('form[action="/admin/categories/delete"]').forEach(form => {
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            
            Swal.fire({
                title: 'Delete Category?',
                text: "This action cannot be undone!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Show loading
                    Swal.fire({
                        title: 'Deleting Category...',
                        allowOutsideClick: false,
                        showConfirmButton: false,
                        willOpen: () => {
                            Swal.showLoading()
                        }
                    });
                    
                    const categoryId = this.querySelector('input[name="category_id"]').value;
                    
                    fetch(this.action, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ category_id: categoryId })
                    })
                    .then(response => {
                        if (response.ok) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Deleted!',
                                text: 'Category has been deleted successfully',
                                confirmButtonColor: '#ff8c00',
                                timer: 2000,
                                timerProgressBar: true
                            }).then(() => {
                                window.location.reload();
                            });
                        } else {
                            throw new Error('Failed to delete category');
                        }
                    })
                    .catch(error => {
                        Swal.fire({
                            icon: 'error',
                            title: 'Delete Failed',
                            text: 'Unable to delete category. It may have products assigned to it.',
                            confirmButtonColor: '#ff8c00'
                        });
                    });
                }
            });
        });
    });

    document.querySelectorAll('.expand-toggle').forEach(toggle => {
        toggle.addEventListener('click', function(e) {
            const parentId = this.getAttribute('data-parent-id');
            // T√¨m t·∫•t c·∫£ c√°c h√†ng subcategory c√≥ parent-id t∆∞∆°ng ·ª©ng
            const subcategoryRows = document.querySelectorAll(`.subcategory-row[data-parent-id="${parentId}"]`);
            
            // Toggle class show cho c√°c h√†ng con
            subcategoryRows.forEach(row => {
                row.classList.toggle('show');
            });
            
            // Xoay m≈©i t√™n
            this.classList.toggle('expanded');
        });
    });
</script>
