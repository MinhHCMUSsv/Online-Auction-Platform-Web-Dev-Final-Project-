</div>

<div class="card shadow-sm border-0 rounded-3">
    <div class="card-header-actions d-flex justify-content-between align-items-center flex-wrap gap-3">
        <div class="d-flex align-items-center gap-2">
            <div class="input-group" style="width: 300px;">
                <span class="input-group-text bg-white border-end-0 text-muted"><i class="bi bi-search"></i></span>
                <input type="search" class="form-control border-start-0 ps-0" name="q" placeholder="Search categories...">
            </div>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-filter me-1"></i> Filter
            </button>
            <button class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-download me-1"></i> Export
            </button>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th style="width: 50px;" class="ps-4"></th>
                    <th style="width: 80px;">#ID</th>
                    <th>Category Name</th>
                    <th style="width: 200px;">Created At</th>
                    <th style="width: 200px;" class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
    {{#if categories}}
        {{#each categories}}
            {{!-- Ch·ªâ duy·ªát c√°c Category Cha tr∆∞·ªõc --}}
            {{#unless parent_id}}
                <tr class="parent-category border-bottom-0" data-category-id="{{category_id}}">
                    <td class="ps-4">
                        {{!-- Ki·ªÉm tra n·∫øu category n√†y c√≥ con th√¨ hi·ªán n√∫t b·∫•m --}}
                        <i class="bi bi-chevron-right expand-toggle" 
                           data-parent-id="{{category_id}}"></i>
                    </td>
                    <td><span class="text-muted fw-mono small">#{{category_id}}</span></td>
                    <td>
                        <div class="d-flex align-items-center">
                            <div class="category-icon-placeholder me-3">
                                <i class="bi bi-folder"></i>
                            </div>
                            <div class="fw-bold text-dark">{{name}}</div>
                        </div>
                    </td>
                    <td>
                        <div class="text-muted small">
                            <i class="bi bi-calendar3 me-1"></i>
                            {{#if created_at}}{{created_at}}{{else}}N/A{{/if}}
                        </div>
                    </td>
                    <td class="text-end pe-4">
                        <button class="btn-action-icon me-1" data-bs-toggle="modal" data-bs-target="#modalAddSubcategory" data-parent-id="{{category_id}}" data-parent-name="{{name}}">
                            <i class="bi bi-plus-circle"></i>
                        </button>
                        <button class="btn-action-icon me-1" data-bs-toggle="modal" data-bs-target="#modalEditCategory" data-id="{{category_id}}" data-name="{{name}}">
                            <i class="bi bi-pencil"></i>
                        </button>
                        <form action="/admin/categories/delete" method="post" class="d-inline-block m-0">
                            <input type="hidden" name="category_id" value="{{category_id}}">
                            <button type="submit" class="btn-action-icon danger" onclick="return confirm('Are you sure?');">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>

                {{!-- V√íNG L·∫∂P CON: T√¨m c√°c con c·ªßa category cha hi·ªán t·∫°i --}}
                {{#each ../categories}}
                    {{#ifEquals parent_id ../category_id}}
                    <tr class="subcategory-row" data-parent-id="{{parent_id}}">
                        <td class="ps-4"></td>
                        <td><span class="text-muted fw-mono small">#{{category_id}}</span></td>
                        <td class="subcategory-indent">
                            <div class="d-flex align-items-center">
                                <div class="category-icon-placeholder me-3" style="background-color: #e3f2fd;">
                                    <i class="bi bi-arrow-return-right" style="font-size: 0.8rem;"></i>
                                </div>
                                <div>
                                    <div class="fw-semibold text-dark">{{name}}</div>
                                    <small class="text-muted">Subcategory</small>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="text-muted small">
                                <i class="bi bi-calendar3 me-1"></i>
                                {{#if created_at}}{{created_at}}{{else}}N/A{{/if}}
                            </div>
                        </td>
                        <td class="text-end pe-4">
                            <button class="btn-action-icon me-1" data-bs-toggle="modal" data-bs-target="#modalEditCategory" data-id="{{category_id}}" data-name="{{name}}">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <form action="/admin/categories/delete" method="post" class="d-inline-block m-0">
                                <input type="hidden" name="category_id" value="{{category_id}}">
                                <button type="submit" class="btn-action-icon danger" onclick="return confirm('Are you sure?');">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    {{/ifEquals}}
                {{/each}}
            {{/unless}}
        {{/each}}
    {{else}}
        {{/if}}
</tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="modalAddCategory" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <form class="modal-content border-0 shadow" action="/admin/categories/add" method="post">
            <div class="modal-header border-bottom-0 pb-0">
                <h5 class="modal-title fw-bold">Add New Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body pt-4">
                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted small text-uppercase">Category Name</label>
                    <input name="name" type="text" class="form-control form-control-lg" placeholder="e.g. Laptops, Furniture..." required>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted small text-uppercase">Parent Category (Optional)</label>
                    <select name="parent_id" class="form-select">
                        <option value="">None (Root Category)</option>
                        {{#each categories}}
                        {{#unless parent_id}}
                        <option value="{{category_id}}">{{name}}</option>
                        {{/unless}}
                        {{/each}}
                    </select>
                    <small class="text-muted">Leave empty to create a root category</small>
                </div>
            </div>
            <div class="modal-footer border-top-0 pt-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-warning-accent px-4">Create Category</button>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="modalAddSubcategory" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <form class="modal-content border-0 shadow" action="/admin/categories/add" method="post">
            <div class="modal-header border-bottom-0 pb-0">
                <h5 class="modal-title fw-bold">Add Subcategory</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body pt-4">
                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted small text-uppercase">Parent Category</label>
                    <input type="text" class="form-control" id="parentCategoryName" readonly>
                    <input type="hidden" name="parent_id" id="parentCategoryId">
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted small text-uppercase">Subcategory Name</label>
                    <input name="name" type="text" class="form-control form-control-lg" placeholder="e.g. Gaming Laptops..." required>
                </div>
            </div>
            <div class="modal-footer border-top-0 pt-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-warning-accent px-4">Add Subcategory</button>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="modalEditCategory" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <form class="modal-content border-0 shadow" action="/admin/categories/edit" method="post">
            <div class="modal-header border-bottom-0 pb-0">
                <h5 class="modal-title fw-bold">Edit Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body pt-4">
                <input type="hidden" name="category_id" id="editCategoryId">
                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted small text-uppercase">Category Name</label>
                    <input name="name" id="editCategoryName" type="text" class="form-control form-control-lg" required>
                </div>
            </div>
            <div class="modal-footer border-top-0 pt-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-warning-accent px-4">Save Changes</button>
            </div>
        </form>
    </div>
</div>

{{#section 'js'}}
<script>
    // Edit Category Modal
    const editModal = document.getElementById('modalEditCategory');
    if (editModal) {
        editModal.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget;
            const id = button.getAttribute('data-id');
            const name = button.getAttribute('data-name');
            
            editModal.querySelector('#editCategoryId').value = id;
            editModal.querySelector('#editCategoryName').value = name;
        });
    }

    // Add Subcategory Modal
    const addSubModal = document.getElementById('modalAddSubcategory');
    if (addSubModal) {
        addSubModal.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget;
            const parentId = button.getAttribute('data-parent-id');
            const parentName = button.getAttribute('data-parent-name');
            
            addSubModal.querySelector('#parentCategoryId').value = parentId;
            addSubModal.querySelector('#parentCategoryName').value = parentName;
        });
    }

    document.querySelectorAll('.expand-toggle').forEach(toggle => {
        toggle.addEventListener('click', function(e) {
            const parentId = this.getAttribute('data-parent-id');
            // T√¨m t·∫•t c·∫£ c√°c h√†ng subcategory c√≥ parent-id t∆∞∆°ng ·ª©ng
            const subcategoryRows = document.querySelectorAll(`.subcategory-row[data-parent-id="${parentId}"]`);
            
            // Toggle class show cho c√°c h√†ng con
            subcategoryRows.forEach(row => {
                row.classList.toggle('show');
            });
            
            // Xoay m≈©i t√™n
            this.classList.toggle('expanded');
        });
    });
</script>
{{/section}}