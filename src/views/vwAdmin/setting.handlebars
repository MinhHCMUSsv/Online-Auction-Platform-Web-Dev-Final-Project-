        saveButton.disabled = true;
        
        setTimeout(() => {
            saveButton.innerHTML = '<i class="bi bi-check-circle me-1"></i> Saved!';
            saveButton.classList.remove('btn-warning-accent');
            saveButton.classList.add('btn-success');
            
            setTimeout(() => {
                saveButton.innerHTML = '<i class="bi bi-check-circle me-1"></i> Save All Settings';
                saveButton.classList.remove('btn-success');
                saveButton.classList.add('btn-warning-accent');
                saveButton.disabled = false;
            }, 2000);
        }, 1500);
    });

    // Real-time preview updates
    const triggerTimeInput = document.getElementById('triggerTime');
    const extensionDurationInput = document.getElementById('extensionDuration');
    const highlightDurationInput = document.getElementById('highlightDuration');
    const highlightStyleSelect = document.getElementById('highlightStyle');

    function updatePreview() {
        const triggerTime = triggerTimeInput.value;
        const extensionDuration = extensionDurationInput.value;
        const highlightDuration = highlightDurationInput.value;
        const highlightStyle = highlightStyleSelect.options[highlightStyleSelect.selectedIndex].text;

        // Update auto extension preview
        const autoExtensionPreview = document.querySelector('.info-badge');
        autoExtensionPreview.innerHTML = `
            <i class="bi bi-info-circle me-1"></i>
            Current: Auto-extend by <strong>${extensionDuration} minutes</strong> when bid placed within <strong>${triggerTime} minutes</strong> of end time
        `;

        // Update highlight preview
        const highlightPreview = document.querySelectorAll('.info-badge')[1];
        highlightPreview.innerHTML = `
            <i class="bi bi-info-circle me-1"></i>
            Current: Products highlighted for <strong>${highlightDuration} minutes</strong> with <strong>${highlightStyle.toLowerCase()}</strong> style
        `;
    }

    // Add event listeners for real-time updates
    [triggerTimeInput, extensionDurationInput, highlightDurationInput, highlightStyleSelect].forEach(element => {
        element.addEventListener('input', updatePreview);
        element.addEventListener('change', updatePreview);
    });

    // Enable/disable form sections based on checkbox state
    document.getElementById('enableAutoExtension').addEventListener('change', function() {
        const formInputs = document.querySelectorAll('#autoExtensionForm input:not([type="checkbox"]), #autoExtensionForm select');
        formInputs.forEach(input => {
            input.disabled = !this.checked;
        });
    });

    document.getElementById('enableHighlight').addEventListener('change', function() {
        const formInputs = document.querySelectorAll('#highlightForm input:not([type="checkbox"]), #highlightForm select');
        formInputs.forEach(input => {
            input.disabled = !this.checked;
        });
    });
});
</script>
